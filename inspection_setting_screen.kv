<SaveInspectionContent>
    id: save_inspection_content
    orientation: "vertical"
    MDLabel:
        size_hint: 1, .3
        halign: "center"
        adaptive_height: True
        text: app.textini[app.lang]["is_popup_save_inspection_message"]
    MDTextField:
        id: inspection_name
        size_hint: 1, .4
        required: True
        hint_text: app.textini[app.lang]["is_popup_save_inspection_name"]
        max_text_length: 30
        input_type: "text"
        color_mode: "custom"
        text_color_focus: 1, 1, 1, 1
    MDBoxLayout:
        size_hint: 1, .3
        MDFlatButton:
            text: app.textini[app.lang]["cansel"]
            on_release: root.popup_close()
        MDFlatButton:
            text: app.textini[app.lang]["ok"]
            on_release: root.save_inspection(inspection_name.text)
