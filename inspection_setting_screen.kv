                width: 500
            MDLabel:
                text: app.textini[app.lang]["preprocessing_num"]
                size_hint_x: None
                width: 200
            MDLabel:
                text: app.textini[app.lang]["create_time"]
                size_hint_x: None
                width: 250
            CheckBox:
                id: checkbox_0
                halign: "center"
                group: "settings"
                disabled: True
            MDLabel:
                id: name_0
            MDLabel:
                id: preprocessing_num_0
            MDLabel:
                id: creat_time_0
            CheckBox:
                id: checkbox_1
                halign: "center"
                group: "settings"
                disabled: True
            MDLabel:
                id: name_1
            MDLabel:
                id: preprocessing_num_1
            MDLabel:
                id: creat_time_1
            CheckBox:
